{
  "openapi": "3.0.0",
  "info": {
    "version": "0.0.1",
    "title": "E-Comm",
    "description": "E-Commerce API",
    "contact": {
      "name": "Ronak",
      "email": "admin@admin.com",
      "url": "https://ecomm-k4ks.onrender.com/api/v1"
    }
  },
  "servers": [
    {
      "url": "http://localhost:5000/api/v1",
      "description": "local server"
    },
    {
      "url": "https://ecomm-k4ks.onrender.com/api/v1",
      "description": "prod server"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Register a new user",
        "description": "Registers a user as admin or regular user",
        "responses": {
          "201": {
            "description": "User registered successfully."
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "example": "any"
                  },
                  "password": {
                    "example": "any"
                  },
                  "email": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Login a user",
        "description": "Logs a user in, returns a cookie",
        "responses": {
          "default": {
            "description": ""
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "example": "any"
                  },
                  "password": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/logout": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Logout a user",
        "description": "Ends a user's session by expiring the cookie",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": [
          "User"
        ],
        "description": "Get All Users",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/users/showMe": {
      "get": {
        "tags": [
          "User"
        ],
        "description": "Show Current User",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/users/updateUser": {
      "patch": {
        "tags": [
          "User"
        ],
        "description": "Update User",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/users/updateUserPassword": {
      "patch": {
        "tags": [
          "User"
        ],
        "description": "Update User Password",
        "responses": {
          "default": {
            "description": ""
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "oldPassword": {
                    "example": "any"
                  },
                  "newPassword": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": [
          "User"
        ],
        "description": "Get Single User",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    }
  },
  "x-apiname": "ecomm",
  "security": [
    {
      "BasicAuth": []
    }
  ]
}